generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Page {
  id      Int    @id @default(autoincrement())
  name    String @db.VarChar(250)
  title   String @db.VarChar(250)
  content String
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  email    String @unique
}

model SiteSettings {
  id     Int    @id @default(autoincrement())
  option String @unique
  value  String
}

enum Participation {
  ONSITE
  ONLINE
}

model Participant {
  id                Int           @id @default(autoincrement())
  fullName          String
  email             String        @unique
  affiliation       String
  participation     Participation @default(ONSITE)
  mailingAddress    String?       @default("")
  student           Boolean       @default(false)
  additionalMessage String?       @default("")
  abstract          Abstract?
  registeredAt      DateTime      @default(now())
}

model Abstract {
  id                 Int         @id @default(autoincrement())
  title              String
  poster             Boolean     @default(false)
  additionalAuthors  String?     @default("")
  affiliationAuthors String?     @default("")
  abstract           String?     @default("")
  participant        Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  participantId      Int         @unique
}
